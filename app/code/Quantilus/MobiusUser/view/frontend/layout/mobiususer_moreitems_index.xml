<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Product\ProductList\Crosssell" 
                name="crosssell.product.list" 
                template="Quantilus_MobiusUser::more-items.phtml">
                <arguments>
                    <argument name="type" xsi:type="string">crosssell</argument>
                    <argument name="title" xsi:type="string" translate="true">More Choices</argument>
                    <argument name="show_add_to" xsi:type="string">true</argument>
                    <argument name="view_model" xsi:type="object">Magento\Catalog\ViewModel\Product\Listing\PreparePostData</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>