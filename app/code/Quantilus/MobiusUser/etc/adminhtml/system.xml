<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <section id="mobius_user" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
      <class>separator-top</class>
      <label>Mobius User</label>
      <tab>quantilus_settings</tab>
      <resource>Quantilus_MobiusUser::config</resource>
      <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
        <label>General Configuration</label>
        <field id="mobius_api_endpoint" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
          <label>Mobius API Endpoint</label>
          <comment>This url will be called to ask mobius to create a redemption code.</comment>
        </field>
        <field id="api_username" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
          <label>API Username</label>
        </field>
        <field id="api_password" translate="label" type="password" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
          <label>API Password</label>
        </field>
        <field id="science_iteractive_tenantcode" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
          <label>Science Interactive Tenant Code</label>
        </field>
      </group>
    </section>
  </system>
</config>