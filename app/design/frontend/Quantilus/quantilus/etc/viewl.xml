<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>85</width>
                <height>85</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="navdir">vertical</var>
        </var>
        <var name="breakpoints">
            <var name="mobile">
                <var name="conditions">
                    <var name="max-width">1023px</var>
                </var>
                <var name="options">
                    <var name="options">
                        <var name="nav">thumbs</var>
                        <var name="navarrows">false</var>
                        <var name="navdir">horizontal</var>
                        <var name="thumbwidth">45</var>
                        <var name="thumbheight">45</var>
                    </var>
                </var>
                <var name="product_page_image_small">45</var>
            </var>
        </var>
    </vars>
</view>
